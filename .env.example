# Environment variables for Docker deployment
# Copy this to .env and fill in your values

# Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud credentials path (inside container)
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials.json

# HubSpot API Key
HUBSPOT_API_KEY=your_hubspot_key_here

# Salesforce credentials
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_salesforce_token

# Calendly API
CALENDLY_API_KEY=your_calendly_key_here

# Stripe API
STRIPE_API_KEY=your_stripe_key_here

# Twilio credentials
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# LinkedIn credentials
LINKEDIN_ACCESS_TOKEN=your_linkedin_token_here

# Outreach credentials
OUTREACH_CLIENT_ID=your_outreach_client_id
OUTREACH_CLIENT_SECRET=your_outreach_client_secret

# Apollo API
APOLLO_API_KEY=your_apollo_key_here

# Service URLs (for container communication)
MCP_SERVER_URL=http://mcp-server:5000
TTS_SERVER_URL=http://tts-server:8000
GEMINI_INTERFACE_URL=http://gemini-interface:8001
