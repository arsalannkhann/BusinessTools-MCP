# Sales MCP Server Configuration Template
# Rename this file to .env and fill in the values

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG_MODE=false

# Google API Configuration
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_TOKEN_FILE=google_token.json
GOOGLE_DEFAULT_CALENDAR_ID=primary

# Google Search API Configuration
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_CSE_ID=your_custom_search_engine_id_here

# Calendly Configuration
CALENDLY_CLIENT_ID=your_calendly_client_id_here
CALENDLY_CLIENT_SECRET=your_calendly_client_secret_here
CALENDLY_ACCESS_TOKEN=your_calendly_access_token_here
CALENDLY_REFRESH_TOKEN=your_calendly_refresh_token_here

# Stripe Configuration
STRIPE_API_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# CRM Configuration
CRM_API_KEY=your_crm_api_key_here
CRM_BASE_URL=https://api.yourcrm.com

# Scheduling Configuration
SCHEDULING_TIMEZONE=America/New_York
SCHEDULING_BUFFER_MINUTES=15

# Outreach Configuration
OUTREACH_TEMPLATES_DIR=templates/outreach
OUTREACH_MAX_FOLLOW_UPS=3

# Communication Configuration
COMMUNICATION_EMAIL=your_email@example.com
COMMUNICATION_SIGNATURE=Your Name\nYour Title\nYour Company